@model List<Profile>

@{
    ViewData["Title"] = "List of Profiles";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["EmailChanged"] != null)
{
    <div id="successMessage" class="alert alert-success" role="alert">
        @TempData["EmailChanged"]
    </div>
}
<div class="row">
    <div class="col-12 mx-auto">
        <div class="row d-flex align-items-center">
            <div class="col-10">
        <h1 class="mt-2">Social Profiles</h1>
            </div>
            <div class="col-2">
                <a class="btn btn-primary" asp-controller="Profile" asp-action="Create">Add new Profile</a>
            </div>
        </div>
        <hr />
        <div class="row">
            @foreach (var profile in Model)
            {
                <div class="col-4">
                    <div class="p-3 text-white rounded-2 my-3 btns-container" 
                    style="background-color: @profile.Color;">
                        <h2>@profile.Title</h2>
                        <hr />
                        <p>@profile.Description</p>
                        <div class="top-btns">
                            <a asp-action="Edit" asp-route-id="@profile.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-route-id="@profile.Id"><i class="bi bi-trash3"></i></a>
                        </div>
                    </div>
                </div>
            }
    </div>
    </div>
</div>

<style>
    .btns-container{
        position:relative;
    }
    .top-btns{
        position: absolute;
        top:-0.6rem;
        right:1rem ;
    }
    .top-btns a{
        background-color: black;
        padding:0.4rem;
        font-size:1.2rem;
        border-radius:50%;
        color:white;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var alertMessage = document.getElementById('successMessage');
        if (alertMessage) {
            // Set a timeout to hide the alert message after 5 seconds
            setTimeout(function () {
                alertMessage.style.display = 'none';
            }, 5000);
        }
    });
</script>
